# OpenTrusty Auth Plane Configuration
OPENTRUSTY_DB_URL=postgres://postgres:password@localhost:5432/opentrusty?sslmode=disable
OPENTRUSTY_PORT=8080
OPENTRUSTY_LOG_LEVEL=info

# Security
# OPENTRUSTY_IDENTITY_SECRET: Shared secret for cross-plane data protection (e.g. email hashing).
# MUST be identical across Auth, Admin, and CLI. (MANDATORY IN PRODUCTION)
OPENTRUSTY_IDENTITY_SECRET=change-me-in-production

# OPENTRUSTY_AUTH_SIGNING_KEY: Secret for Auth Plane internal signing (OAuth2/OIDC/Sessions).
OPENTRUSTY_AUTH_SIGNING_KEY=change-me-in-production
